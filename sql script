Create the DEPARTMENT table
CREATE TABLE DEPARTMENT (
    DEPTID NUMBER(5) PRIMARY KEY,
    DEPTNAME VARCHAR2(50),
    DEPTLOC VARCHAR2(50)
);



CREATE TABLE EMPLOYEE (
    EMPID NUMBER(5) PRIMARY KEY,
    EMPNAME VARCHAR2(50),
    DOB DATE,
    DOJ DATE,
    JOB VARCHAR2(50),
    SALARY NUMBER(10),
    DEPTID NUMBER(5),
    CONSTRAINT fk_dept FOREIGN KEY (DEPTID) REFERENCES DEPARTMENT(DEPTID)
);



CREATE TABLE PRODUCT (
    PRODID VARCHAR2(10) PRIMARY KEY,
    PRODNAME VARCHAR2(50),
    PRICE NUMBER(10)
);
 


CREATE TABLE SALES (
    SALESID NUMBER(5) PRIMARY KEY,
    SALESDATE DATE,
    QUANTITY NUMBER(5),
    EMPID NUMBER(5),
    PRODID VARCHAR2(10),
    CONSTRAINT fk_emp FOREIGN KEY (EMPID) REFERENCES EMPLOYEE(EMPID),
    CONSTRAINT fk_prod FOREIGN KEY (PRODID) REFERENCES PRODUCT(PRODID)
);